<h2 style="text-align: center; color: blue; font-weight: bold;">用户注册</h2>
<br>
<br>
<div class="container" >
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "电子邮箱" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password, "密码" %>
    <% if @minimum_password_length %>
    <em>(至少<%= @minimum_password_length %> 个字符)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "请确认密码" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :username, "姓名" %>
    <%= f.text_field :username %>
  </div>
  <br>
  <div class="field">
    <%= f.label :department, "部门" %>
    <%= f.text_field :department %>
  </div>
  <br>
  <div class="field">
    <%= f.label :position, "角色" %>
    <%= f.text_field :position %>
  </div>
  <%= f.hidden_field :remaining_leave, value: 12 %> 

  <div class="actions">
    <%= f.submit "注册" %>
  </div>
<% end %>
</div>

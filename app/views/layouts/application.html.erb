</head>
<body>
  <header>
    <nav class="top-nav">
      <div class="top-links">
        <%= link_to '关于我们', '/about' %>
        <%= link_to '联系我们', '/contact' %>
	<%= link_to '新员工注册', new_user_registration_path %>
